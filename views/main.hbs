    <!--TASK MODAL-->
    <div class="modal fade" id="taskModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">New Task</h4>
                </div>
                <div class="modal-body">
                    <form action="newtask" method="post">
                        <div class="form-group">
                            <label for="form-groupName">Task Name</label>
                            <input type="text" name="taskname" id="form-groupName" class="form-control" placeholder="Task Name">
                        </div>
                        <div class="form-group">
                            <label for="form-groupDesc">Task Description</label>
                            <input type="text" name="taskdesc" id="form-groupDesc" class="form-control" placeholder="Task Description">
                        </div>
                        <div class="form-group">
                            <label for="form-groupReward">Reward</label>
                            <input type="number" min="0" max="1000" name="taskreward" id="form-groupReward" class="form-control" placeholder="Reward">
                        </div>
                        <div class="form-group">
                            <label for="form-groupFreq">Frequency</label>
                            <select name="taskfreq" id="form-groupFreq" class="form-control">
                                <option value="0">One Time</option>
                                <option value="1">Daily</option>
                                <option value="2">Weekly</option>
                                <option value="3">Monthly</option>
                            </select>
                        </div>
                        <input type="hidden" name="un" value="{{user}}">
                        <input type="hidden" name="credit" value="{{credit}}">
                        <input type="hidden" name="img" value="{{image}}">
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary btn-sm" id="newtasksubmitbutton">Submit</button>
                        </div>
                    </form>
                </div>
              </div>
        </div>
        
